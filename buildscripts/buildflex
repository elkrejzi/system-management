#!/bin/bash -e

export PKGNAME=flex
export PKGVER=2.6.0
export PKGTAR=${PKGNAME}-${PKGVER}.tar.xz
export PKGURL="https://downloads.sourceforge.net/flex/${PKGTAR}"
export MAKE_JOBS_FLAGS="-j4"
export KEEP_STATIC=1

export DEFAULT_CC="clang"
export DEFAULT_CXX="clang++ -stdlib=libc++"

make_install_post() {
  ln -sf flex ${DEST}/usr/bin/lex
}

. $(dirname $0)/master.sh
