#!/bin/bash -e

export PKGNAME=hdparm
export PKGVER=9.48
export PKGTAR=${PKGNAME}-${PKGVER}.tar.gz
export PKGURL="https://downloads.sourceforge.net/hdparm/${PKGTAR}"
export MAKE_JOBS_FLAGS="-j4"

export DEFAULT_CC="clang"

configure_override() {
  sed -i "s:-O2:${CFLAGS}:g" Makefile

  unset CFLAGS
}

. $(dirname $0)/master.sh
