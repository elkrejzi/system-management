#!/bin/bash -e

export PKGNAME=diffutils
export PKGVER=3.3
export PKGTAR=${PKGNAME}-${PKGVER}.tar.xz
export PKGURL="https://ftp.gnu.org/gnu/diffutils/${PKGTAR}"
export MAKE_JOBS_FLAGS="-j4"

export DEFAULT_CC="clang"

configure_pre() {
  sed -i 's:= @mkdir_p@:= /bin/mkdir -p:' po/Makefile.in.in
}

. $(dirname $0)/master.sh
