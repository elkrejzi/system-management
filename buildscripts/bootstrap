$(dirname $0)/buildperl-modules 1
$(dirname $0)/buildicu
$(dirname $0)/buildboost
$(dirname $0)/buildlibgpg-error
$(dirname $0)/buildlibgcrypt
$(dirname $0)/buildlibidn
$(dirname $0)/buildlibunistring
