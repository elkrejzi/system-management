$(dirname $0)/buildlibatomic_ops
$(dirname $0)/buildlibcap-ng
$(dirname $0)/buildlibpng
$(dirname $0)/buildlibssh2
$(dirname $0)/buildlibtasn1
$(dirname $0)/buildlibuv
$(dirname $0)/buildlz4
$(dirname $0)/buildlzo
