  pkg_remove
popd

cp -rfv /binary/systemd-[0-9]*/lib/*.so.* /lib

$(dirname $0)/buildsystemd

pushd /binary/util-linux-[0-9]*
  pkg_remove
popd

$(dirname $0)/buildutil-linux

