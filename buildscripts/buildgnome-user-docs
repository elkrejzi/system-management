#!/bin/bash -e

export VER=3.14.2
export DEST=/binary/gnome-user-docs-${VER}

pushd gnome-user-docs-${VER}

./configure --prefix=/usr

make -j4
make install DESTDIR=${DEST}

popd

rm -rf gnome-user-docs-${VER}

cat > ${DEST}/INSTALL << "EOF"
#!/bin/bash

cp -rf --remove-destination usr /
EOF

chmod 755 ${DEST}/INSTALL
