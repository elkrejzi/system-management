#!/bin/bash -e

export PKGNAME=unrar
export PKGVER=5.3.9
export PKGTAR=unrarsrc-${PKGVER}.tar.gz
export PKGDIR=unrar
export PKGURL="http://www.rarlab.com/rar/${PKGTAR}"

export DEFAULT_CC="clang"
export DEFAULT_CXX="clang++ -stdlib=libc++"

configure_override() {
  sed -i "s:-O2:${CFLAGS}:g;/CXX/s:g++:${CXX}:g" makefile

  unset CFLAGS
}

make_install_override() {
  install -Dm755 unrar ${DEST}/usr/bin/unrar
}

. $(dirname $0)/master.sh
